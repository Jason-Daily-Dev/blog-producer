{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach to Backend Docker",
        "type": "debugpy",
        "request": "attach",
        "connect": {
          "host": "localhost",
          "port": 5678
        },
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/backend",
            "remoteRoot": "/app"
          }
        ],
        "justMyCode": true
      },
      {
        "name": "Debug FastAPI with Uvicorn",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/backend/main.py",
        "args": ["--reload"],
        "console": "integratedTerminal",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/backend"
        }
      }
    ]
  }
